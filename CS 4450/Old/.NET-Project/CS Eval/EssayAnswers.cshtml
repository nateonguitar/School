@{
    Response.ContentType = "application/json";

    string json = null;
    if (Request["crn"] != null && Request["semester"] != null &&
        Request["year"] != null)
    {
        var crn = Convert.ToInt32(Request["crn"]);
        var semester = Convert.ToInt32(Request["semester"]);
        var year = Convert.ToInt32(Request["year"]);

       var essayAnswers = EvalSystem.EvalSystemDB.GetEssayAnswers(crn, semester, year);
        json = EvalSystem.EssayAnswersModel.ToJsonString(essayAnswers);

       
    }
}@Html.Raw(@json)