<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingTranslation"
    android:id="@+id/mainview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/noisytexture" >

    <!-- main layout box -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <!-- top section with picture and inputs -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Oblique\nTriangles"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/triangle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="-25dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Side a:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/sideA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:hint="Side a"
                        android:inputType="numberDecimal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Side b:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/sideB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:hint="Side b"
                        android:inputType="numberDecimal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Side c:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/sideC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:hint="Side c"
                        android:inputType="numberDecimal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="7dp"
                        android:text="α:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/alpha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:hint="α"
                        android:inputType="numberDecimal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="7dp"
                        android:text="β:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/beta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:hint="β"
                        android:inputType="numberDecimal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="46dp"
                        android:layout_marginTop="7dp"
                        android:text="\u0263:"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/gamma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:hint="γ"
                        android:inputType="numberDecimal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical" >

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/calcButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_default"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Calculate" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_default"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Reset" />
        </LinearLayout>

        <TextView
            android:id="@+id/errors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#FF0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pinstripe"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#x00A0;Triangle&#x00A0;&#x00A0;&#x00A0;"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/triangle1pinstripe"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_gravity="clip_horizontal"
                    android:background="#000000"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/sideA1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side a:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideB1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side b:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideC1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side c:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/alpha1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="α:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/beta1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="β:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/gamma1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="\u0263:"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/sideA1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideB1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideC1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/alpha1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/beta1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/gamma1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="1dp"
                android:layout_height="230dp"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/triangle2area"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Triangle 2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/triangle2pinstripe"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_gravity="clip_horizontal"
                    android:background="#000000"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/sideA2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side a:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideB2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side b:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideC2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Side c:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/alpha2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="α:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/beta2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="β:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/gamma2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="\u0263:"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/sideA2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideB2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sideC2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/alpha2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/beta2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/gamma2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- end main layout box -->

</ScrollView>