<!-- Other than Razor syntax, the view can be normal HTML -->
<!-- the model directive binds the model from the controller to the view -->

<div id="mainPageSearch">
    <h2>Search for a Specimen</h2>
    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { onsubmit = "return validateSearch(this);" }))
    {
        @Html.TextBox("search", null, new { placeholder = "Search the Database" });
        <input type="submit" value="Search">
        <p class="bold">Allow for duplicates: @Html.CheckBox("multipleSearch")</p>
    }
    @*
        Produces the following form element
        <form action="/Account/Login" action="post">
    *@
</div>



<script type="text/JavaScript">
    // hide the search bar in the top bar because the home page's main purpose is the search bar

    $("#topBanner #topBannerSearch").hide();
</script>