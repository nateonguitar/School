@model HerbariumMVC.Models.SearchResultViewModel
@{
    ViewBag.Title = "EditASpecimen";
}

<h2>EditASpecimen</h2>

<style type="text/css">
    input{
        padding:5px;
    }
</style>

@using (Html.BeginForm("DeleteASpecimen", "Home", FormMethod.Post, new { onsubmit = "return deleteAreYouSure()"}))
{
    @Html.HiddenFor(model => model.LocationGUID)
    @Html.HiddenFor(model => model.ImageName)
    <input type="submit" value="Delete This Specimen" />
}

<script type="text/javascript">
    function deleteAreYouSure() {
        return window.confirm("Are you sure you want to delete this specimen?");
    }
</script>



@using (Html.BeginForm("EditASpecimen", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table>
        <tr><td>Genus             : </td><td>@Html.EditorFor(model => model.Genus            )</td></tr>
        <tr><td>Species           : </td><td>@Html.EditorFor(model => model.Species          )</td></tr>
        <tr><td>SubSpecies        : </td><td>@Html.EditorFor(model => model.SubSpecies       )</td></tr>
        <tr><td>CollectedDate     : </td><td><input type="date" name="CollectedDate"value="@String.Format("{0:yyyy-MM-dd}", Model.CollectedDate)" /></td></tr>
        <tr><td>Elevation         : </td><td>@Html.EditorFor(model => model.Elevation        )</td></tr>
        <tr><td>County            : </td><td>@Html.EditorFor(model => model.County           )</td></tr>
        <tr><td>State             : </td><td>@Html.EditorFor(model => model.State            )</td></tr>
        <tr><td>Community         : </td><td>@Html.EditorFor(model => model.Community        )</td></tr>
        <tr><td>AcquisitionNo     : </td><td>@Html.EditorFor(model => model.AcquisitionNo    )</td></tr>
        <tr><td>Family            : </td><td>@Html.EditorFor(model => model.Family           )</td></tr>
        <tr><td>EthnobotanicalUse : </td><td>@Html.EditorFor(model => model.EthnobotanicalUse)</td></tr>
        <tr><td>CollectorNo       : </td><td>@Html.EditorFor(model => model.CollectorNo      )</td></tr>
        <tr><td>Notes             : </td><td>@Html.EditorFor(model => model.Notes            )</td></tr>
        <tr><td>Lat               : </td><td><input type="number" name="Lat" value="@Model.Lat" step="0.000001" /></td></tr>
        <tr><td>Lng               : </td><td><input type="number" name="Lng" value="@Model.Lng" step="0.000001" /></td></tr>
        <tr><td>Country           : </td><td>@Html.EditorFor(model => model.Country          )</td></tr>
        <tr><td>LocationDesc      : </td><td>@Html.TextAreaFor(model => model.LocationDesc   )</td></tr>
        <tr><td>Township          : </td><td>@Html.EditorFor(model => model.Township         )</td></tr>
        <tr><td>Author            : </td><td>@Html.EditorFor(model => model.Author           )</td></tr>
        <tr><td>SubAuthor         : </td><td>@Html.EditorFor(model => model.SubAuthor        )</td></tr>
        <tr><td>SoilType          : </td><td>@Html.EditorFor(model => model.SoilType         )</td></tr>
        <tr><td>SoilColor         : </td><td>@Html.EditorFor(model => model.SoilColor        )</td></tr>
        <tr><td>SoilMoisture      : </td><td>@Html.EditorFor(model => model.SoilMoisture     )</td></tr>

        <tr>
            @if (String.IsNullOrEmpty(Model.ImageName) || Model.ImageName.Equals(" ") )
            {
                <td>
                    Select a new image to upload:<br />
                </td>
            }
            else
            {
                <td>
                    Select a new file to replace this image:<br />
                    <img style="width:200px;" src="../../Images/@Model.ImageName" />
                </td>
            }
            <td>
                <input type="file" name="Image" />               
            </td>
        </tr>

        <tr><td>Or mark this image for deletion:</td><td>@Html.EditorFor(model => model.MarkedForDeletion)</td></tr>
        <tr><td colspan="2"><hr /></td></tr>
    </table>
    @Html.HiddenFor(model => model.SpecimenGUID)
    @Html.HiddenFor(model => model.LocationGUID)
    @Html.HiddenFor(model => model.AIKey)
    @Html.HiddenFor(model => model.SIKey)
    @Html.HiddenFor(model => model.LIKey)
    @Html.HiddenFor(model => model.IIKey)
    @Html.HiddenFor(model => model.CollectorName)
    @Html.HiddenFor(model => model.ImageName)

    <input type="submit" value="Update This Specimen" />
    <a href="/Home/Search"><input type="button" value="Cancel" /></a>
    
}